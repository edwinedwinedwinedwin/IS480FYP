<div class="grid-container">
    <% i = 0 %>
  <% project_milestones.each do |ms|
      if( i % 2 == 0)
  %>
          <div class="grid-50"></div>
          <div class="grid-50">
            <span class="card-meta__date">$<%= ms.target_amount %></span>
            <span class="card-meta__date"><%= ms.name %></span>
            <% if ms.project_status_id == 5%>
                <span class="card-meta__date"><%= ms.project_status.try(:status)%></span>
                <% else %>
            <span class="card-meta__date"><%= ms.end_date.strftime("%B %Y")%></span>

                <% end %>
          </div>
      <% else %>
          <div class="grid-50">
            <span class="card-meta__date">$<%= ms.target_amount %></span>
            <span class="card-meta__date"><%= ms.name %></span>
            <% if ms.project_status_id == 5%>
                <span class="card-meta__date"><%= ms.project_status.try(:status)%></span>
            <% else %>
                <span class="card-meta__date"><%= ms.end_date.strftime("%B %Y")%></span>

            <% end %>
          </div>
          <div class="grid-50">


          </div>
     <% end %>
  <% i=i+1
    end %>
</div>