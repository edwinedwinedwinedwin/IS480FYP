<div class="page-main">
  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag "component" %>
  <%= stylesheet_link_tag "flickity/flickity.css" %>
  <%= javascript_include_tag "application"%>

  <div class="page-section">
    <legend class="form-heading heading"> Edit Project Member </legend>

    <%= form_for(@project_member) do |f| %>
        <%= f.hidden_field :project_id, :value => @project_member.project_id %>

        <% if @project_member.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <b><u>Errors:</u></b>
              <ul>
                <% @project_member.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>


        <div class="form-field">
          <%= f.text_field :role, class: "form-input", placeholder: "Role" %>
          <label class="form-label" for="role">Role</label>
        </div>

        <div class="form-field">
          <%= f.text_field :description, class: "form-input", placeholder: "Description" %>
          <label class="form-label" for="description">Description</label>
        </div>

        <div class="form-actions">
          <td align=right><%= f.submit "Edit Project Member", class: "button--stroke--long" %></td>
        </div>

    <% end %>
    <br>

    <%= link_to 'Back',  {:controller => "projects", :action => "show", :id=>@project_member.project_id } %>

  </div>
</div>