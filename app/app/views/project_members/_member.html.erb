<%= stylesheet_link_tag "style" %>
<%= stylesheet_link_tag "component" %>
<%= stylesheet_link_tag "flickity/flickity.css" %>
<%= javascript_include_tag "application"%>

<legend class="form-heading heading"><h1>Project Members</h1></legend>

<table class="table-show">
  <thead>
  <tr class="tr-row">
    <th class="th-row">Email</th>
    <th class="th-row">Role</th>
    <th class="th-row">Description</th>
    <th class="th-row">Project_id</th>
    <th class="th-row">Project_status_id</th>
    <th class="th-row" colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <%= projectID = 0 %>

  <% all_members.each do |projectMember| %>

   <%= projectID = projectMember.project_id %>
      <tr class="tr-row">
        <td> <%= projectMember.project.created_on %></td>
        <td class="td-row"><%= projectMember.email %></td>
        <td class="td-row"><%= projectMember.role %></td>
        <td class="td-row"><%= projectMember.description %></td>
        <td class="td-row"><%= projectMember.project_id %></td>
        <td class="td-row"><%= projectMember.project_status.try(:status).try() %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Add Project Member', {:controller => "project_members", :action => "new" } %><br>
<!-- Link back to projects-->
<%= link_to 'Back', {:controller => "projects", :action => "show", :id => params[:id] } %>