<%= render "layouts/headerBanner" %>
<%= yield %>

<%= stylesheet_link_tag "style" %>
<%= stylesheet_link_tag "component" %>
<%= stylesheet_link_tag "flickity/flickity.css" %>
<%= javascript_include_tag "application"%>

<article class="project-content">
  <%= render "layouts/projectMenu" %>

<section class="project-content-section" id="about">
  <%= render "project_proposals/about", :proposal_details=> @project_proposal, :project => @project, :all_milestones =>  @project_milestones%>
</section>

<section class="project-content-section" id="details">
  <%= render "project_inspirations/inspirations", :all_inspiration =>  @project_inspirations, :project => @project%>
</section>

<section class="project-content-section" id="updates">
  <%= render "project_updates/updates", :all_updates =>  @project_updates, :project => @project %>
</section>

<section class="project-content-section" id="team">
  <%= render "project_members/member", :all_members =>  @project_members, :project => @project %>
</section>

<section class="project-content-section" id="fuel">
  <%= render "project_rewards/reward", :all_rewards =>  @project_rewards, :project => @project %>
</section>

<section class="project-content-section" id="timeline">
  <%= render "project_milestones/milestone", :all_milestones =>  @project_milestones, :project => @project , :last_milestone => @project_milestones_last, :project_proposal => @project_proposal%>
</section>

</article>