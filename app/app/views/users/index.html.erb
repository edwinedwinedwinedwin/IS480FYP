<p id="notice"><%= notice %></p>

<h1>Manage Users</h1>

<table class="table table-striped">
  <thead>
    <tr>      
      <th>Email</th>
      <th>Password</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Banned Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if !user.is_admin %>
      <tr>        
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.address %></td>        
        <td><% if user.is_banned %>
              <font color=red><%= "Yes" %></font>
            <% else %>
              <font color=green><%= "No" %></font>
            <% end %>
        </td>                
        <td><%= link_to 'Ban', {:controller => "users", :action => "ban", :id => user.id }, {:method=>:post} %> | 
        <%= link_to 'Un-Ban', {:controller => "users", :action => "unban", :id => user.id } , {:method=>:post} %></td>
        <td><%= link_to 'Edit', {:controller => "users", :action => "edit",:id => user.id } %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %></td>
      </tr>
      <% end %> 
    <% end %>
  </tbody>
</table>

