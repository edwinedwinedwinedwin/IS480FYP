
<%= stylesheet_link_tag "style" %>
<%= stylesheet_link_tag "component" %>
<%= stylesheet_link_tag "flickity/flickity.css" %>
<%= javascript_include_tag "application"%>

<p id="notice"><%= notice %></p>

<legend class="form-heading heading"><h1>Manage Users</h1></legend><br>

<table class="table-show">
  <thead>
    <tr class="tr-row">      
      <th class="th-row">Email</th>      
      <th class="th-row">First name</th>
      <th class="th-row">Last name</th>
      <th class="th-row">Address</th>
      <th class="th-row">Banned Status</th>
      <th class="th-row" colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if !user.is_admin %>
      <tr class="tr-row">        
        <td class="td-row"><%= user.email %></td>        
        <td class="td-row"><%= user.first_name %></td>
        <td class="td-row"><%= user.last_name %></td>
        <td class="td-row"><%= user.address %></td>        
        <td class="td-row"><% if user.is_banned %>
              <font color=red><b><%= "Yes" %></b></font>
            <% else %>
              <font color=green><b><%= "No" %></b></font>
            <% end %>
        </td>
        <td class="td-row">
        <% if !user.is_banned %>
              <b><%= link_to 'Ban', {:controller => "users", :action => "ban", :id => user.id }, {:method=>:post} %></b>
            <% else %>
              <b><%= link_to 'Un-Ban', {:controller => "users", :action => "unban", :id => user.id } , {:method=>:post} %></b>
            <% end %>
        </td>                
        <!-- <td><%# link_to 'Delete', user, method: :delete%></td> -->
      </tr>
      <% end %> 
    <% end %>
  </tbody>
</table>
<br>
