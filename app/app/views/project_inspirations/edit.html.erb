<div class="page-main">
  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag "component" %>
  <%= stylesheet_link_tag "flickity/flickity.css" %>
  <%= javascript_include_tag "application"%>

  <div class="page-section">
    <legend class="form-heading heading"> Edit Project Member </legend>

      <%= form_for(@projectInspiration) do |f| %>              
          <%= f.hidden_field :project_id, :value => 1 %> <!-- :value will eventually be project_id instead of 1-->
          <%# f.hidden_field :project_id, :value => session[:project_id] %> 
          <%= f.hidden_field :project_status_id, :value => 1 %> <!-- :value will eventually be project_id instead of 1-->
          <%# f.hidden_field :project_status_id, :value => session[:project_id] %> 

          <% if @projectInspiration.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <b><u>Errors:</u></b>
                <ul>
                  <% @projectInspiration.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-field">
            <%= f.text_field :title, class: "form-input", placeholder: "Project Inspiration Title" %>
            <label class="form-label" for="title">Project Inspiration Title</label>
          </div>

          <div class="form-field">
        <%= f.text_area :description, class: "form-input" %>
            <label class="form-label" for="description">Description</label>
          </div>
          
          <div class="form-field">
        <%= f.text_field :img_url, class: "form-input", placeholder: "Image URL"  %>
            <label class="form-label" for="img_url">Image URL</label>
          </div>

          <div class="form-field">
        <%= f.text_field :caption, class: "form-input", placeholder: "Caption" %>
            <label class="form-label" for="caption">Inspiration Caption</label>
          </div>

          <div class="form-actions">
            <td align=right><%= f.submit "Edit Project Inspiration", class: "button--stroke--long" %></td>
          </div>

      <% end %>
      <br>
      <%= link_to 'Back', {:controller => "project_inspirations", :action => "show", :id=>1 } %>
      <!-- :id will eventually be project_id instead of 1-->

    </div>
  </div>
  <hr>
  <%= params.inspect %>