<section class="project-content-section" id="fuel">
  <div class="wrap" >
    <h2 class="section-heading heading--small">Fuel Us Up</h2>
    <p>Select a reward level and support our project.</p>
    <p>
      <%= link_to 'Add Project Reward', {:controller => "project_rewards", :action => "new", :project_id => project.id}, class: "button--stroke--long" %>
    </p>
  </div>

  <ul class="fuel-rewards">
    <% all_rewards.each do |pRewards| %>
        <li class="fuel-reward js-lightbox-open" data-content-container="#fuel-lightbox-content-<%= pRewards.id %>">
          <header class="fuel-reward-header">
            <span class="fuel-reward__price">$<%= pRewards.min_amount %></span>
            <span class="fuel-reward__backers"><%= pRewards.no_of_rewards %> Backer</span>
            <span class="fuel-reward__remaining">(0 left of <%= pRewards.no_of_rewards %>)</span>
          </header>

          <div class="fuel-reward-description">
            <p><%= pRewards.description %></p>             
            <!--<p>Every dollar makes a big impact. The WATERisLIFE team will send you a personal thank you e-mail so you can feel the love and stay connected. Thank you!</p>-->
          </div>

          <div class="fuel-reward-delivery">
            <span class="fuel-reward-delivery__heading">ESTIMATED DELIVERY:</span>
            <p><%= pRewards.estimated_delivery %></p>
          </div>

          <figure class="fuel-reward-thumbnail">
            <%= image_tag(pRewards.img_url,:class=> "img-square") %>
          </figure>

          <!-- To set edit and select -->
          <div class="fuel-reward-select">
            <%= link_to 'Edit', {:controller => "project_rewards", :action => "edit", :id => pRewards.id}, :class=>"button--stroke"%>

            <!--<a href="#" class="button&#45;&#45;stroke">Select</a>-->
          </div>
        </li>
    <% end %>
    <i class="temp-slider-arrow-left" style="margin-top: -75px;"></i>
    <i class="temp-slider-arrow-right" style="margin-top: -75px;"></i>
  </ul>

  <a href="#" class="fuel-pledge-another">Pledge Another Amount <i class="icon icon--chevron-right"></i></a>
</section>


